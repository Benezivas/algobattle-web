{% extends "base.jinja" %}
{% block content %}

<script src="/static/scripts/problem_detail.js" type="module"></script>
<script>
  const problem = {{problem | tojson}}
  const contexts = {{contexts | tojson}}
</script>


<div id="app" v-cloak>
  <nav id="navbar" class="navbar bg-body-tertiary px-3 mb-3 sticky-top" style="top: 62px">
    <a class="navbar-brand" href="#">
      ${problem.name} {% if user.is_admin %}
          (${store.contexts[problem.context].name})
        {% endif %}
    </a>
    <ul class="nav nav-pills">
      <li v-if="problem.description" class="nav-item">
        <a class="nav-link" href="#description">Description</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#details">Details</a>
      </li>
      <li v-if="problem.problem_schema" class="nav-item">
        <a class="nav-link" href="#problem_schema">Problem schema</a>
      </li>
      <li v-if="problem.solution_schema" class="nav-item">
        <a class="nav-link" href="#solution_schema">Solution schema</a>
      </li>
    </ul>
  </nav>
  <div data-bs-spy="scroll" data-bs-target="#navbar" data-bs-root-margin="0px 0px -40%" data-bs-smooth-scroll="true" class="bg-body-tertiary p-3 rounded-2" tabindex="0">
    <img v-if="problem.image" :src="problem.image.location" :alt="problem.image.alt_text" class="object-fit-cover border rounded mb-4" style="width: 100%;">
    <template v-if="problem.description">
      <h4 id="description" class="mt-5">Description</h4>
      {% if description == "__DOWNLOAD_BUTTON__" %}
        <a role="button" class="btn btn-primary btn-sm" :href="problem.description.location" title="Download file">Download description file <i class="bi bi-download ms-1"></i></a>
      {% elif description is not none %}
        {{ description | safe }}
      {% endif %}
    </template>
    <h4 id="details" class="mt-5">Details</h4>
    <p class="row">
      <ul class="list-group list-group-flush bg-body-tertiary w-em">
        <li v-if="problem.start" class="list-group-item bg-body-tertiary">Start: ${fmt_date(problem.start)}</li>
        <li v-if="problem.end" class="list-group-item bg-body-tertiary">End: ${fmt_date(problem.end)}</li>
        <li class="list-group-item bg-body-tertiary">
          <a role="button" class="btn btn-primary btn-sm" :href="problem.file.location" title="Download problem file">Download problem file <i class="bi bi-download ms-1"></i></a>
        </li>
        <li class="list-group-item bg-body-tertiary">
          <a role="button" class="btn btn-primary btn-sm" :href="problem.config.location" title="Download config file">Download config file <i class="bi bi-download ms-1"></i></a>
        </li>
        <li class="list-group-item bg-body-tertiary">
          <a role="button" class="btn btn-primary btn-sm" :href="`/api/problem/${problem.id}/download_all`" title="Download all files">Download all files <i class="bi bi-download ms-1"></i></a>
        </li>
      </ul>
    </p>
    <template v-if="problem.problem_schema">
      <h4 id="problem_schema" class="mt-5">Problem schema</h4>
      <pre><code>${problem.problem_schema}</code></pre>
    </template>
    <template v-if="problem.solution_schema">
      <h4 id="solution_schema" class="mt-5">Solution schema</h4>
      <pre><code>${problem.solution_schema}</code></pre>
    </template>
  </div>
</div>


{% endblock %}
