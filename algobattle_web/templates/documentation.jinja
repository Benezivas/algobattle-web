{% extends "base.jinja" %}
{% block content %}

<script src="/static/scripts/documentation.js" type="module"></script>
<script>
  const problems = {{problems | tojson}}
  const teams = {{teams | tojson}}
  const docs = {{docs | tojson}}
  const user_team = {{user_team | tojson}}
</script>


<script type="text/x-template" id="problem">
  <div class="accordion-item">
    <h2 class="accordion-header" :id="'heading' + problem.name">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" :data-bs-target="'#collapse' + problem.name" aria-expanded="false" :aria-controls="'collapse' + problem.name">
        ${problem.name}
      </button>
    </h2>
    <div :id="'collapse' + problem.name" class="accordion-collapse collapse" :aria-labelledby="'heading' + problem.name" data-bs-parent="#problems">
      <form class="accordion-body" @submit.prevent="upload">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Team</th>
              <th scope="col">Documentation</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <tr v-if="!(store.user_team.id in store.docs[problem.id])">
                <td>${store.user_team.name}</td>
                <td>
                  <input class="w-em form-control form-control-sm" name="file" type="file" required="required">
                </td>
                <td>
                  <button type="submit" class="btn btn-sm btn-primary" data-bs-toggle="tooltip" title="Upload">Upload</button>
                </td>
            </tr>
            <tr v-for="(doc, team_id) in store.docs[problem.id]">
              <td>${store.teams[team_id].name}</td>
              <td>
                <input v-if="editing" class="w-em form-control form-control-sm" name="file" type="file" required="required">
                <a v-else role="button" class="btn btn-primary btn-sm" :href="'/api/documentation/getfile/'+doc.id" data-bs-toggle="tooltip" title="Download file">${doc.file.name} <i class="bi bi-download ms-1"></i></a>
              </td>
              <td class="text-end">
                <div class="btn-group btn-group-sm" role="group">
                  <button type="button" class="btn btn-danger" data-bs-toggle="tooltip" title="Delete team" v-if="editing" @click="remove(doc)"><i class="bi bi-trash"></i></button>
                  <button type="button" class="btn btn-warning" data-bs-toggle="tooltip" title="Edit team" @click="toggle_editing"><i class="bi bi-pencil"></i></button>
                  <button type="submit" class="btn btn-success" data-bs-toggle="tooltip" title="Submit edit" v-if="editing"><i class="bi bi-check2"></i></button>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </form>
    </div>
  </div>
</script>

<script type="text/x-template" id="problem_row">
  <tr>
    <td>${problem.name}</td>
    <td>
      <input v-if="editing" class="e-em form-control form-control-sm" name="file" type="file">
      <a v-else-if="store.docs[problem.id]" role="button" class="btn btn-primary btn-sm" :href="'/api/documentation/getfile/'+store.docs[problem.id]?.id" data-bs-toggle="tooltip" title="Download config file">
        ${store.docs[problem.id].file.name} <i class="bi bi-download ms-1"></i>
      </a>
    </td>
    <td class="text-end">
      <div class="btn-group btn-group-sm" role="group">
        <button type="button" class="btn btn-danger" data-bs-toggle="tooltip" title="Delete team" v-if="editing" @click="remove(doc)"><i class="bi bi-trash"></i></button>
        <button type="button" class="btn btn-warning" data-bs-toggle="tooltip" title="Edit team" @click="toggle_editing"><i class="bi bi-pencil"></i></button>
        <button type="submit" class="btn btn-success" data-bs-toggle="tooltip" title="Submit edit" v-if="editing"><i class="bi bi-check2"></i></button>
      </div>
    </td>
  </tr>
</script>

<div id="app">
  <h3>Documentation</h3>
  {% if user.is_admin %}
  <div class="accordion" id="problems">
    <Problem v-for="(problem, id) in store.problems" :key="id" :problem="problem"></Problem>
  </div>
  {% else %}
  <form>
    <table class="table w-xs">
      <thead>
        <tr>
          <th scope="col">Problem</th>
          <th scope="col">Documentation</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <tr is="vue:problem-row" v-for="(problem, id) in store.problems" :key="id" :problem="problem"></tr>
      </tbody>
    </table>
  </form>
  {% endif %}
</div>

{% endblock %}
