{% extends "base.jinja" %}
{% block content %}

<script src="/static/scripts/admin_users.js" type="module"></script>
<script>
  const users_input = {{users | tojson}}
  const teams_input = {{teams | tojson}}
  const contexts_input = {{contexts | tojson}}
</script>

<script type="text/x-template" id="hoverBadge">
  <span class="badge rounded-pill m-1" :class="{'text-bg-warning': !hover, 'text-bg-danger': hover}">
    ${data.name}
    <a @click.prevent="$emit('remove', data)" href="#" @mouseover="hover = true" @mouseleave="hover = false" title="remove"><i class="bi bi-x-lg"></i></a>
  </span>
</script>

<script type="text/x-template" id="userWindow">
  <div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true" ref="user_modal">
    <div class="modal-dialog modal-dialog-centered">
      <form class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="modalLabel">
          <span v-if="action == 'edit'">Edit user</span>
          <span v-else>Create new user</span>
          </h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <label for="name" class="form-label">Name</label>
          <div class="input-group w-em input-group-sm mb-3" name="name">
            <input class="form-control w-em" type="text" v-model="data.name">
            <input type="checkbox" class="btn-check" id="set-admin" name="is_admin" v-model="data.is_admin">
            <label class="btn btn-outline-success btn-sm" for="set-admin" data-bs-toggle="tooltip" title="Admin"><i class="bi bi-patch-check"></i></label>
          </div>
          <label for="email" class="form-label">Email</label>
          <input class="form-control w-em form-control-sm mb-3" name="email" type="email" v-model="data.email">
          <label for="teams" class="form-label mb-0">Teams</label>
          <div class="d-flex flex-row mb-1">
            <hover-badge v-for="id in display_teams" :data="store.teams[id]" @remove="remove_team"></hover-badge>
          </div>
          <div class="btn-group dropend">
            <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              Add
            </button>
            <ul class="dropdown-menu">
              <li>
                <form class="py-1 px-2">
                  <div class="mb-3">
                    <label for="searchName" class="form-label">Name</label>
                    <input type="text" class="form-control form-control-sm" id="searchName" v-model="search.name" @input="send_search">
                  </div>
                  <div>
                    <label for="searchContext" class="form-label">Context</label>
                    <select class="form-select form-select-sm" id="searchContext" v-model="search.context" @change="send_search">
                      <option :value="null" :selected="data.context == null"></option>
                      <option v-for="(context, id) in store.contexts" :value="id" :selected="id == data.context">${context.name}</option>
                    </select>
                  </div>
                </form>
              </li>
              <li><hr class="dropdown-divider"></li>
              <li v-for="(user, id) in search.result"><a class="dropdown-item" @click.prevent="add_team(user)" href="#">${user.name}</a></li>
            </ul>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger me-auto" data-bs-toggle="tooltip" title="Delete user" v-if="action == 'edit' && user.id != '{{user.id}}'" @click="delete_user">Delete user</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Discard</button>
          <button type="button" class="btn btn-primary" @click="submit_data">Submit</button>
        </div>
      </form>
    </div>
  </div>
</script>

<div id="app" v-cloak>
  <h3>Users</h3>
  <table class="table table-hover mb-2" id="users">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Teams</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <tr v-for="user in store.users" :class="{'table-info': user.id == '{{user.id}}'}">
        <td>
          ${user.name}
          <i v-if="user.is_admin" class="bi bi-patch-check-fill text-success ms-1" data-bs-toggle="tooltip" data-bs-placement="right" title="Admin"></i>
        </td>
        <td>${user.email}</td>
        <td>${user.teams.map(t => store.teams[t].name).join(", ")}</td>
        <td class="text-end">
          <button type="button" class="btn btn-warning btn-sm" title="Edit user" @click="open_modal('edit', user)"><i class="bi bi-pencil"></i></button>
        </td>
      </tr>
    </tbody>
  </table>

  <div class="d-flex mb-3 pe-2">
    <button type="button" class="btn btn-primary btn-sm me-auto" @click="open_modal('create', null)">Create new user</button>
    <button type="button" class="btn btn-primary btn-sm position-relative" data-bs-toggle="collapse" data-bs-target="#filters" aria-expanded="false" aria-controls="filters">
      <i class="bi bi-funnel-fill"></i>
      <span class="position-absolute top-0 start-100 translate-middle p-2 bg-danger border border-light rounded-circle" v-if="has_params">
        <span class="visually-hidden">Applied filters</span>
      </span>
    </button>
    {% if max_page != 1 %}
    <nav aria-label="Table pagination">
      <ul class="pagination pagination-sm justify-content-end mb-0 ms-2">
        <li class="page-item"><a class="page-link" :class="{disabled: {{page}} <= 1}" :href="apply_filters(1)"><i class="bi bi-chevron-double-left"></i></a></li>
        <li class="page-item"><a class="page-link" :class="{disabled: {{page}} <= 1}" :href="apply_filters({{page}} - 1)"><i class="bi bi-chevron-compact-left"></i></a></li>
        <li class="page-item"><a class="page-link" href="#">{{page}}</a></li>
        <li class="page-item"><a class="page-link" :class="{disabled: {{page}} >= {{max_page}}}" :href="apply_filters({{page}} + 1)"><i class="bi bi-chevron-compact-right"></i></a></li>
        <li class="page-item"><a class="page-link" :class="{disabled: {{page}} >= {{max_page}}}" :href="apply_filters({{max_page}})"><i class="bi bi-chevron-double-right"></i></a></li>
      </ul>
    </nav>
    {% endif %}
  </div>

  <div class="d-flex justify-content-end">
    <div class="collapse w-xs" id="filters" aria-labelledby="filterHeading">
      <div class="card card-body">
        <div class="row mb-3">
          <div class="col">
            <label for="nameFilter" class="form-label mb-1">Name</label>
            <input class="form-control w-em" id="nameFilter" type="text" v-model="filter.name">
          </div>
          <div class="col">
            <label for="emailFilter" class="form-label mb-1">Email</label>
            <input class="form-control w-em" id="emailFilter" type="text" v-model="filter.email">
          </div>
        </div>
        <div class="row mb-3">
          <div class="col">
            <label for="adminFilter" class="form-label mb-1">User type</label>
            <select class="form-select w-em" id="adminFilter" aria-label="User type filter" v-model="filter.is_admin">
              <option selected value="null">Any</option>
              <option value="true">Admin</option>
              <option value="false">Non Admin</option>
            </select>
          </div>
          <div class="col">
          </div>
        </div>
        <div class="row mb-3">
          <div class="col">
            <label for="contextFilter" class="form-label mb-1">Context</label>
            <select class="form-select w-em" id="contextFilter" v-model="filter.context">
              <option :value="null"></option>
              <option v-for="(context, id) in store.contexts" :value="id">${context.name}</option>
            </select>
          </div>
          <div class="col">
            <label for="teamFilter" class="form-label mb-1">Team</label>
            <select class="form-select w-em" id="teamFilter" v-model="filter.team">
              <option :value="null"></option>
              <option v-for="(team, id) in store.teams" :value="id">${team.name}</option>
            </select>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <label for="limitFilter" class="form-label mb-1">Limit</label>
            <input class="form-control w-em" id="limitFilter" type="number" min="1" max="200" step="1" v-model="filter.limit">
          </div>
          <div class="col text-end align-self-end">
            <a v-if="has_params" class="btn btn-secondary me-2" href="users" role="button">Clear</a>
            <a class="btn btn-primary" :href="apply_filters(1)" role="button">Apply</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <user-window :user="modal_user" :action="action" :modal="modal"></user-window>
</div>


{% endblock %}
